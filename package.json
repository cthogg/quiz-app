{
  "name": "quizpro",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.18.1",
    "bulma": "^0.8.0",
    "he": "^1.2.0",
    "lint-staged": "^9.5.0",
    "lodash": "^4.17.15",
    "node-sass": "^4.13.0",
    "prettier": "^1.19.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.0",
    "react-test-renderer": "^16.8.6",
    "typescript": "3.4.5"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "typecheck:all": "tsc",
    "lint:all": "CI=true eslint --ext js,ts,tsx src --color",
    "test:ci": "CI=true react-scripts test --colors",
    "ci:pipeline": "yarn test:ci && yarn typecheck:all && yarn lint:all && yarn build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn typecheck:all && lint-staged && yarn lint:all && yarn test:ci",
      "pre-push": ""
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/lodash": "^4.14.149",
    "@types/he": "^1.1.0",
    "@types/jest": "24.0.12",
    "@types/node": "11.13.8",
    "@types/react": "16.8.15",
    "@types/react-dom": "16.8.4",
    "@types/react-test-renderer": "^16.8.2",
    "husky": "^3.1.0"
  }
}
